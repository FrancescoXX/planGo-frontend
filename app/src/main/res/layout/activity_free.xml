<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layRelative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.francescoxx.plango.frontend.FreeActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.francescoxx.plango.frontend.FreeActivity"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFocus"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/common_google_signin_btn_text_light_default"
        android:shadowColor="@color/common_google_signin_btn_text_dark_disabled"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:text="Login"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/btnFocus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_mylocation"/>

    <ImageButton
        android:id="@+id/btnLista"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="?android:attr/actionModeFindDrawable"
        android:tint="?android:attr/colorControlNormal"/>
</RelativeLayout>
